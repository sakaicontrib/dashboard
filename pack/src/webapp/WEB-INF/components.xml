<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
	"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <!-- Bring in the hibernate related beans -->
    <import resource="spring-hibernate.xml" />
    <import resource="sakai-hibernate.xml" />

    <!-- create an external logic bean which abstracts out the Sakai bits -->
    <bean id="org.sakaiproject.dashboard.logic.ExternalLogic"
        class="org.sakaiproject.dashboard.logic.ExternalLogicImpl"
        init-method="init">
        <property name="functionManager" ref="org.sakaiproject.authz.api.FunctionManager" />
        <property name="securityService" ref="org.sakaiproject.authz.api.SecurityService" />
        <property name="sessionManager" ref="org.sakaiproject.tool.api.SessionManager" />
        <property name="siteService" ref="org.sakaiproject.site.api.SiteService" />
        <property name="toolManager" ref="org.sakaiproject.tool.api.ToolManager" />
        <property name="userDirectoryService"
            ref="org.sakaiproject.user.api.UserDirectoryService" />
    </bean>
    
    <bean id="org.sakaiproject.dashboard.db.DashboardDataQueries" 
    	class="org.sakaiproject.dashboard.db.DashboardDataQueriesDefault">
    </bean>
    <bean id="org.sakaiproject.dashboard.impl.DashboardPersistence" 
    	class="org.sakaiproject.dashboard.impl.DashboardPersistenceImpl"
    	init-method="init" singleton="true">
    	<property name="sqlService" 
    		ref="org.sakaiproject.db.api.SqlService" />
    	<property name="dashboardDataQueries" 
    		ref="org.sakaiproject.dashboard.db.DashboardDataQueries" />
    </bean>

    <!-- create a logic bean, give it the dao from above -->
    <bean id="org.sakaiproject.dashboard.logic.DashboardLogic"
        class="org.sakaiproject.dashboard.logic.DashboardLogicImpl"
        init-method="init">
        <property name="dao" 
            ref="org.sakaiproject.dashboard.dao.DashboardDao" />
        <property name="externalLogic"
            ref="org.sakaiproject.dashboard.logic.ExternalLogic" />
    	<property name="entityManager" ref="org.sakaiproject.entity.api.EntityManager" />
    	<property name="siteService" ref="org.sakaiproject.site.api.SiteService" />
    </bean>
    
    <!-- create an entity provider bean -->
    <bean class="org.sakaiproject.dashboard.logic.entity.DashboardEntityProvider">
        <property name="logic" ref="org.sakaiproject.dashboard.logic.DashboardLogic" />
        <property name="developerHelperService" ref="org.sakaiproject.entitybroker.DeveloperHelperService" />
    </bean>
    
    <bean id="org.sakaiproject.dashboard.event.DashboardEventHandler" 
    		class="org.sakaiproject.dashboard.event.DashboardEventHandler" 
    		init-method="init" singleton="true" destroy-method="destroy">
    	<property name="dashboardLogic" ref="org.sakaiproject.dashboard.logic.DashboardLogic"/>
    	<property name="eventHandlerRegistry" ref="org.sakaiproject.event.api.EventHandlerRegistry" />
    </bean>
</beans>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
	"http://www.springframework.org/dtd/spring-beans.dtd">

<!-- This file generated by Sakai App Builder -AZ -->
<beans>

    <!-- define the list of HBM mapping files -->
    <bean id="org.sakaiproject.dashboard.HBMMappingList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <value>org/sakaiproject/dashboard/dao/hbm/DashboardItem.hbm.xml</value>
            </list>
        </constructor-arg>
    </bean>

    <!-- create a DAO bean, use the hibernate implementation -->
    <bean id="org.sakaiproject.dashboard.dao.DashboardDaoTarget"
            class="org.sakaiproject.dashboard.dao.DashboardDaoImpl"
            init-method="init">
        <property name="sessionFactory" 
            ref="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory" />
        <property name="persistentClasses">
            <list>
                <value>org.sakaiproject.dashboard.model.DashboardItem</value>
            </list>
        </property>
    </bean>

	<!-- This wraps our DAO so that the transactions are managed -->
	<bean id="org.sakaiproject.dashboard.dao.DashboardDao"
			class="org.sakaiproject.genericdao.springutil.CurrentClassLoaderTxProxyFactoryBean">
		<property name="transactionManager" 
			ref="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
		<property name="target" 
			ref="org.sakaiproject.dashboard.dao.DashboardDaoTarget" />
		<property name="transactionAttributes">
			<props>
                <prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
                <prop key="find*">PROPAGATION_REQUIRED,readOnly</prop>
                <prop key="count*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>

	<!-- create a data preloading bean that has transaction protection -->
	<bean id="org.sakaiproject.dashboard.dao.PreloadData"
			class="org.sakaiproject.dashboard.dao.PreloadDataImpl"
			init-method="init">
		<property name="dao"
			ref="org.sakaiproject.dashboard.dao.DashboardDao" />
	</bean>

</beans>
